{
	"manifest_version": 2,

	"name": "Sail",
	"version": "1.0.5",
	"author": "Coder",
	"description": "Work in immutable, pre-configured development environments.",

	"background": {
		"scripts": [
			"out/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://github.com/*",
				"https://gitlab.com/*"
			],
			"js": [
				"out/content.js"
			]
		}
	],
	"permissions": [
		"nativeMessaging"
	],
	"browser_action": {
		"default_title": "Sail",
		"default_popup": "out/popup.html"
	}
}
