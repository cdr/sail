{
	"manifest_version": 2,

	"name": "Sail",
	"version": "1.0.5",
	"author": "Coder",
	"description": "Work in immutable, pre-configured development environments.",

	"background": {
		"scripts": [
			"out/background.js"
		],
		"persistent": false
	},
	"content_scripts": [
		{
			"matches": [
				"https://*/*"
			],
			"js": [
				"out/content.js"
			]
		}
	],
	"permissions": [
		"nativeMessaging"
	],
	"browser_action": {
		"default_title": "Sail",
		"default_popup": "out/popup.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sail@coder.com",
      "strict_min_version": "48.0"
    }
  }
}